{
    "extends": ["next/core-web-vitals", "prettier"],
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "react/no-unescaped-entities": "off",
        "react-hooks/exhaustive-deps": "warn",
        "@next/next/no-img-element": "warn"
    },
    "overrides": [
        {
            "files": ["*.md", "*.mdx"],
            "rules": {
                "prettier/prettier": "off"
            }
        }
    ]
}
